      <h3>Feed</h3>
      <div class="information">
        <h5> Questions:   <%= current_user.questions.count %></h5><br>
        <h5> Answers:   <%= @answerCount %></h5><br>
        <h5> Questions:   <%= current_user.questions.count %></h5><br>

      </div>
    </div>
  </div>
  <div class="center">
    <div class="upper">
      <div class="naming"></div>

    </div>
    <div class="lower"></div>
  </div>
  <div class="right"></div>

</div>


